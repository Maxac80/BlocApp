rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Reguli simple pentru testare
    // NOTĂ: Dacă salvezi în Firestore ca base64, aceste reguli nu se aplică
    // Acestea sunt pentru când vei folosi Storage direct
    
    // Permite utilizatorilor autentificați să citească și să scrie
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}